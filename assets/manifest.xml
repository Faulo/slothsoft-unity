<?xml version="1.0"?>
<assets xmlns="http://schema.slothsoft.net/farah/module">
	<resource-directory name="xsl"
		type="application/xslt+xml" />

	<fragment name="hub">
		<custom-asset name="help"
			executable-builder="Slothsoft\Unity\Assets\HubHelpBuilder" />
		<custom-asset name="install"
			executable-builder="Slothsoft\Unity\Assets\HubInstallBuilder"
			parameter-filter="Slothsoft\Unity\Assets\HubParameterFilter" />
	</fragment>
	<fragment name="project">
		<custom-asset name="test"
			executable-builder="Slothsoft\Unity\Assets\ProjectTestBuilder"
			parameter-filter="Slothsoft\Unity\Assets\ProjectParameterFilter" />
		<custom-asset name="install"
			executable-builder="Slothsoft\Unity\Assets\ProjectInstallBuilder"
			parameter-filter="Slothsoft\Unity\Assets\ProjectParameterFilter" />
			
			
        <custom-asset name="method"
            executable-builder="Slothsoft\Unity\Assets\ProjectMethodBuilder"
            parameter-filter="Slothsoft\Unity\Assets\ProjectMethodParameterFilter" />
        <custom-asset name="build"
            executable-builder="Slothsoft\Unity\Assets\ProjectBuildBuilder"
            parameter-filter="Slothsoft\Unity\Assets\ProjectBuildParameterFilter" />
		<custom-asset name="tests"
			executable-builder="Slothsoft\Unity\Assets\ProjectTestsBuilder"
			parameter-filter="Slothsoft\Unity\Assets\ProjectTestsParameterFilter" />
		<fragment name="tests-junit">
			<use-template ref="/xsl/to-junit" />
			<use-document ref="/project/tests" />
		</fragment>
	</fragment>
	<fragment name="git">
		<custom-asset name="clone"
			executable-builder="Slothsoft\Unity\Assets\GitBuilder"
			parameter-filter="Slothsoft\Unity\Assets\ProjectParameterFilter" />
		<custom-asset name="fetch"
			executable-builder="Slothsoft\Unity\Assets\GitBuilder"
			parameter-filter="Slothsoft\Unity\Assets\ProjectParameterFilter" />
		<custom-asset name="pull"
			executable-builder="Slothsoft\Unity\Assets\GitBuilder"
			parameter-filter="Slothsoft\Unity\Assets\ProjectParameterFilter" />
		<custom-asset name="checkout"
			executable-builder="Slothsoft\Unity\Assets\GitBuilder"
			parameter-filter="Slothsoft\Unity\Assets\ProjectParameterFilter" />
	</fragment>
</assets>
